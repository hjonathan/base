[
  {
    "id": "example",
    "description": "Building xproject library",
    "steps": [
      {
        "type": "read",
        "src": "config/conf.json",
        "variable": "FILES"
      },
      {
        "type": "parse",
        "data": "%FILES%",
        "parseTo": "json",
        "path": "js/files",
        "variable": "FILES"
      },
      {
        "type": "browserify",
        "files": "%FILES%",
        "dest_dir": "build/js",
        "dest_name": "bundle.js"
      },
      {
        "type": "copy",
        "src_dir": "base",
        "dest_dir": "build",
        "file_mode": 777,
        "files": [
          {
            "src": "index.html",
            "dest_name": "index.html"
          },
          {
            "src": "css/base.css",
            "dest_name": "css/base.css"
          },
          {
            "src": "css/index.css",
            "dest_name": "css/index.css"
          },
          {
            "src": "css/bootstrap.min.css",
            "dest_name": "css/bootstrap.min.css"
          }
        ]
      }
    ]
  },
